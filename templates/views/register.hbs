{{>header}}
{{>navbar}}

<div class="container">
    <div class="row">
        <h4>Register Page</h4>
        <hr>
        <form action="/register" method="post">
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="fname">First Name</label>
                    <input type="text" name="fname" id="fname" class="form-control" placeholder="first name">
                </div>
                <div class="form-group col-md-6">
                    <label for="lname">Last Name</label>
                    <input type="text" name="lname" id="lname" class="form-control" placeholder="Last name">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="email">email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="email">
                </div>
                <div class="form-group col-md-6">
                    <label for="phone">Phone</label>
                    <input type="text" name="phone" id="phone" class="form-control" placeholder="Enter Phone">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="gender">Gender</label>
                    <span>Male</span><input type="radio" name="gender" value="male" checked id="gender"> 
                    <span>Female</span><input type="radio" name="gender" value="female" id="gender"> 
                </div>
                <div class="form-group col-md-6">
                    <label for="age">Age</label>
                    <input type="text" name="age" id="age" class="form-control" placeholder="Enter age">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="password">password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="password">
                </div>
                <div class="form-group col-md-6">
                    <label for="cpassword">confirm password</label>
                    <input type="password" name="cpassword" id="cpassword" class="form-control" placeholder="Enter cpassword">
                </div>
            </div>
            <br>
            <div class="row">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>
<br>
{{>footer}}